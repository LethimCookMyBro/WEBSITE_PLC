# Environment Variables for PANYA Backend
# Copy this to .env and fill in your values

# Server
PORT=3001
NODE_ENV=development

# Database (Railway Volume path)
DATABASE_PATH=/data/panya.db

# JWT Secret (generate a strong random string for production!)
JWT_SECRET=panya-dev-secret-change-this-in-production

# CORS (comma-separated origins, or * for all)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
